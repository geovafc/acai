<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:layout_marginTop="24dp"
            android:id="@+id/imageView1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logocomfundodentro" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:text="Açaí Pai D&apos;Égua"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/branco" />

        <TextView
            android:id="@+id/textoapp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView1"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="22dp"
            android:text="TextView"
            android:textColor="@color/branco" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textoapp"
            android:layout_below="@+id/textoapp"
            android:layout_marginTop="48dp"
            android:text="Agradecimentos: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/branco" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignRight="@+id/textoapp"
            android:layout_below="@+id/textView2"
            android:layout_marginRight="14dp"
            android:paddingRight="16dp"
            
            android:src="@drawable/ufra_6" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="23dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:src="@drawable/bpm_5" />

    </RelativeLayout>

</ScrollView>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textColor="#610631"
        android:text="@string/splash_text2"
        android:textSize="22sp"/>
 <ImageView
     android:id="@+id/imageView5"
